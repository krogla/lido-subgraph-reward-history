{
    "compilerOptions": {
        "lib": ["ES2022"],
        "target": "ES2022",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "outDir": "dist"
    },
    "include": ["src/**/*.ts"]
}
